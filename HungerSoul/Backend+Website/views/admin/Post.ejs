<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ADMIN PORTAL</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/admin-dashboard.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
</head>

<body>
    <%- include('nav.ejs')  %>
    <div class="row top-container">
        <div class="col-1 side-bar">
            <div class="row r-button">
                <a href="/admin/dashboard/register"><button class="button-27" id="btn-1" role="button">Register Emergency Service</button></a>
            </div>
            <div class="row r-button">
                <a href=""></a><button class="button-27" id="btn-2" role="button">Verify Emergency Service</button></a>
            </div> 
        </div>
        <div class="sidenav">
            <a href="/admin/dashboard">Dashboard</a>
            <a href="/admin/dashboard/inventory">Inventory</a>
            <a href="#">Donations</a>
            <a href="#">Volunteers</a>
            <a href="/admin/dashboard/QRgenerator">QR Generator</a>
            <a href="/admin/dashboard/feedpost">Feed Post</a>
        </div>
        
        <div class="col" style="padding-top: 60px; padding-left: 60px;">
            <div style="width: 60%; text-align: center; margin: 50px auto;">
            <form method="POST" action="/admin/dashboard/feedpost/submit" class="blog-form">
                <h2>Create a New Post</h2>
                
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>
                
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" required>
                
                <label for="content">Content:</label>
                <textarea id="content" name="content" required></textarea>
                
                <label for="image">Image:</label>
                <input type="file" id="image" name="image" style="display: block;">
                
                <button type="submit">Create Post</button>
              </form>
            </div>
              <style>
              .blog-form {
                background-color: #f2f2f2;
                border-radius: 5px;
                padding: 20px;
                margin-top: 20px;
                box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.2);
              }
              
              .blog-form h2 {
                margin-top: 0;
                font-size: 24px;
                text-align: center;
                margin-bottom: 20px;
              }
              
              .blog-form label {
                text-align: start;
                display: block;
                font-size: 16px;
                margin-bottom: 5px;
              }
              
              .blog-form input[type="text"],
              .blog-form textarea {
                width: 100%;
                padding: 10px;
                margin-bottom: 20px;
                border-radius: 5px;
                border: none;
                font-size: 16px;
              }
              
              .blog-form input[type="file"] {
                margin-bottom: 20px;
              }
              
              .blog-form button[type="submit"] {
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 5px;
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
                transition: background-color 0.2s;
              }
              
              .blog-form button[type="submit"]:hover {
                background-color: #0069d9;
              }
              
              @media (max-width: 768px) {
                .blog-form {
                  padding: 10px;
                }
                
                .blog-form input[type="text"],
                .blog-form textarea {
                  font-size: 14px;
                }
                
                .blog-form button[type="submit"] {
                  font-size: 14px;
                }
              }
              </style>
              
                            

            
            
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
    
    <script>
        $(document).ready(function() {
            $('.table_id').DataTable();
        });
    </script>
    
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <!-- <script src="/js/admin-dashboard"></script> -->
</body>

</html>